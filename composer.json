{
    "name": "olxssafrica/legit",
    "description": "Legit is a simple service for easy Atlas user verification via a unique user identifier.",
    "keywords": ["mobile verification", "legit", "api"],
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "barryvdh/laravel-cors": "0.7.x",
        "erusev/parsedown": "^1.6",
        "arcturial/clickatell": "~2.1",
        "olx-ssafrica/validate": "~1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Legit\\": "src/Legit",
            "Infrastructure\\": "src/Infrastructure/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/olx-ssafrica/validate.git"
        }
    ]
}
